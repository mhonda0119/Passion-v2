{
    "version": "2.0.0",
    "type": "shell",
    "echoCommand": true,
    "tasks": [
        {
            "label": "Build project",
            "command": "make",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "args": [
                "all",
                "-j16",
                "GCC_PATH=C:/Tools/gcc-arm-none-eabi-10.3-2021.10-win32/gcc-arm-none-eabi-10.3-2021.10/bin"
            ],
            "options": {
                "env": {
                    "PATH": "C:/Tools/make-3.81-bin/bin",
                }
            },

        },
        {
            "label": "Clean project",
            "command": "make",
            "problemMatcher": "$gcc",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "args": [
                "clean"
            ],
            "options": {
                "env": {
                    "PATH": "C:/Tools/make-3.81-bin/bin",
                }
            },
        }
    ]
}